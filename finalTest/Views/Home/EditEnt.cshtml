@{
}

@model Entertainer

<h2>Edit Entertainer</h2>

<form asp-action="EditEnt" method="post" class="form-horizontal">
    <input type="hidden" asp-for="EntertainerId" />

    <div class="form-group">
        <label asp-for="EntStageName" class="control-label">Stage Name</label>
        <input asp-for="EntStageName" class="form-control" />
        <span asp-validation-for="EntStageName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntSsn" class="control-label">SSN</label>
        <input asp-for="EntSsn" class="form-control" />
        <span asp-validation-for="EntSsn" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntStreetAddress" class="control-label">Street Address</label>
        <input asp-for="EntStreetAddress" class="form-control" />
        <span asp-validation-for="EntStreetAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntCity" class="control-label">City</label>
        <input asp-for="EntCity" class="form-control" />
        <span asp-validation-for="EntCity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntState" class="control-label">State</label>
        <input asp-for="EntState" class="form-control" />
        <span asp-validation-for="EntState" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntZipCode" class="control-label">Zip Code</label>
        <input asp-for="EntZipCode" class="form-control" />
        <span asp-validation-for="EntZipCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntWebPage" class="control-label">Web Page</label>
        <input asp-for="EntWebPage" class="form-control" />
        <span asp-validation-for="EntWebPage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EntEmailAddress" class="control-label">Email Address</label>
        <input asp-for="EntEmailAddress" class="form-control" />
        <span asp-validation-for="EntEmailAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateEntered" class="control-label">Date Entered</label>
        <input asp-for="DateEntered" type="date" class="form-control" />
        <span asp-validation-for="DateEntered" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}