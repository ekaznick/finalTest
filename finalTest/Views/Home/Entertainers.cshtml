@{
}

@model List<Entertainer>

<table class="table table-bordered table-striped">
    <thead class="table-dark fw-bold">
        <tr>
            <th>Stage Name</th>
            <th>More Information</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.EntStageName</td>
                <td><a class="btn btn-light" asp-controller="Home" asp-action="Details" asp-route-id="@x.EntertainerId">Details</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-info" asp-controller="Home" asp-action="AddEnt">Add Entertainer</a>